    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สมัครสมาชิก"
                android:fontFamily="@font/sukhumvitsetbold"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:textSize="24dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stock_border"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#666"
                android:fontFamily="@font/sukhumvitsetbold"
                android:textSize="16dp"
                android:drawablePadding="@dimen/com_facebook_likeview_text_size"
                android:drawableStart="@drawable/user"
                android:id="@+id/usernameId"
                android:hint="ชื่อผู้ใช้"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stock_border"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#666"
                android:fontFamily="@font/sukhumvitsetbold"
                android:textSize="16dp"
                android:drawablePadding="@dimen/com_facebook_likeview_text_size"
                android:drawableStart="@drawable/envelope"
                android:id="@+id/emailId"
                android:hint="อีเมล"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/stock_border"
                android:paddingLeft="20dp"
                android:textColor="#666"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/sukhumvitsetbold"
                android:drawablePadding="@dimen/com_facebook_likeview_text_size"
                android:drawableStart="@drawable/key"
                android:textSize="16dp"
                android:id="@+id/passwordId"
                android:hint="รหัสผ่าน"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/border_button"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/sukhumvitsetsemibold"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:text="สมัครสมาชิก"
                android:id="@+id/btnRegis"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/btnLLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sukhumvitsetsemibold"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#666"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="ลงชื่อเข้าใช้"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>


