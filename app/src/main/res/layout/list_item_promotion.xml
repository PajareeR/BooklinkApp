<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/clickDetaill"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/imageBookPro"
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="bottom"
                android:src="@drawable/sambook"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/nameBookPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sukhumvitsetbold"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:maxLines="2"
                    android:layout_marginRight="10dp"
                    android:text="ชื่อหนังสือโปรโมชัน"/>
                <TextView
                    android:id="@+id/authorBookPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sukhumvitsetbold"
                    android:textSize="14dp"
                    android:textColor="#666"
                    android:maxLines="2"
                    android:layout_marginRight="10dp"
                    android:text="ชื่อคนแต่ง"/>

                <TextView
                    android:id="@+id/lobPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sukhumvitsetbold"
                    android:textSize="50dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    android:text="เลขลด"/>
                <TextView
                    android:id="@+id/datePro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/csprajad"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:text="วันหมดอายุ"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
