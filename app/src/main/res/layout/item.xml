<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
        
        <ImageView
            android:id="@+id/imageCelebBook"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/sambook"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/nameBook"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_below="@id/imageCelebBook"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="ชื่อหนังสือ"
            android:textSize="20sp"
            android:fontFamily="@font/sukhumvitsetbold"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/authorBookCeleb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:fontFamily="@font/sukhumvitsettext"
            android:layout_below="@+id/nameBook"
            android:text="นักเขียน"/>
    </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>