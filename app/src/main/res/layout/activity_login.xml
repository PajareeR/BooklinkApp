<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bbg"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="ลงชื่อเข้าใช้"
           android:fontFamily="@font/sukhumvitsetbold"
           android:textColor="#000"
           android:layout_gravity="center_horizontal"
           android:paddingTop="20dp"
           android:textSize="24dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/stock_border"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#666"
        android:fontFamily="@font/sukhumvitsetbold"
        android:textSize="16dp"
        android:hint="ชื่อผู้ใช้"
        android:drawablePadding="@dimen/com_facebook_likeview_text_size"
        android:drawableStart="@drawable/user"
        android:id="@+id/edtUser"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/stock_border"
        android:paddingLeft="20dp"
        android:textColor="#666"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/sukhumvitsetbold"
        android:drawablePadding="@dimen/com_facebook_likeview_text_size"
        android:drawableStart="@drawable/key"
        android:textSize="16dp"
        android:id="@+id/edtPass"
        android:hint="รหัสผ่าน"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/sukhumvitsetsemibold"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        android:text="ลงชื่อเข้าใช้"
        android:id="@+id/btnLogin"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="หรือลงชื่อเข้าใช้ด้วย"
           android:fontFamily="@font/sukhumvitsetbold"
           android:textSize="16dp"
           android:textColor="#ccc"
           android:layout_marginBottom="10dp"
           android:layout_gravity="center_horizontal"/>
       <com.facebook.login.widget.LoginButton
           android:id="@+id/btnFBLogin"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textSize="16dp"
           android:backgroundTint="#3c5898"
           android:paddingBottom="15dp"
           android:paddingTop="15dp"
           android:paddingLeft="20dp"
           android:fontFamily="@font/sukhumvitsetbold"
           />


   </LinearLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/btnRegis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sukhumvitsetsemibold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:paddingBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="สมัครใช้งาน"
                android:gravity="center"

                android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>


