<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back"
            android:onClick="Onclicktobookself"
            />

        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:layout_margin="20dp"
                android:background="@null"
                android:id="@+id/btnFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tfav"
                android:onClick="Onclicktobookself"
                />
            <ImageButton
                android:layout_margin="20dp"

                android:background="@null"

                android:id="@+id/btnRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tread"
                android:onClick="Onclicktobookself"

                />
            <ImageButton
                android:layout_margin="20dp"

                android:background="@null"

                android:id="@+id/btnWant"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twant"
                android:onClick="Onclicktobookself"

                />
            <ImageButton
                android:layout_margin="20dp"

                android:background="@null"

                android:id="@+id/btnBought"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tbought"
                android:onClick="Onclicktobookself"

                />
            <ImageButton
                android:layout_margin="20dp"

                android:background="@null"

                android:id="@+id/btnReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/treading"
                android:onClick="Onclicktobookself"

                />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/ImageBook"
        android:src="@drawable/ooo"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NameBook"
        android:text="ชื่อเรื่อง"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AuthorBook"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="คำโปรย"/>

    <TextView
        android:id="@+id/TitleBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/PublisherBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/CatagoryBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/ISBNBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ข้อมูลเพิ่มเติม"
        />
    <TextView
        android:id="@+id/AdditionBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เล่มคล้ายกัน"
        />



</LinearLayout>
</ScrollView>